    <script>
        // URL do seu Google Apps Script (USE SEU ID REAL)
        const APP_URL = 'https://script.google.com/macros/s/18FV26kSbrMPn4OGAIl2kFKX9Q-geyHjEPCH8U3Dvwp0/exec';
        
        // Abrir em nova janela (melhor para celular)
        function openAppInNewWindow() {
            const width = Math.min(500, window.screen.width - 20);
            const height = Math.min(800, window.screen.height - 100);
            const left = (window.screen.width - width) / 2;
            const top = (window.screen.height - height) / 2;
            
            const newWindow = window.open(
                APP_URL,
                'ControleEquipamentos',
                `width=${width},height=${height},left=${left},top=${top},scrollbars=yes,resizable=yes`
            );
            
            // Se pop-up for bloqueado, mostrar instruÃ§Ãµes
            if (!newWindow || newWindow.closed || typeof newWindow.closed == 'undefined') {
                alert('Popup bloqueado! Por favor, permita pop-ups para este site.\n\n' +
                      'Ou use o botÃ£o "Acesso Direto" abaixo.');
            }
        }
        
        // Abrir na mesma janela
        function openAppInSameWindow() {
            window.location.href = APP_URL;
        }
        
        // Detectar se Ã© mobile e tentar abrir automaticamente
        function isMobile() {
            return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
        }
        
        // Se for mobile, mostrar alerta apÃ³s 3 segundos
        if (isMobile()) {
            setTimeout(() => {
                const shouldAutoOpen = confirm(
                    'ðŸ“± Dispositivo mÃ³vel detectado!\n\n' +
                    'Deseja abrir o sistema em uma janela otimizada para celular?'
                );
                if (shouldAutoOpen) {
                    openAppInNewWindow();
                }
            }, 3000);
        }
        
        // Adicionar evento para tecla Enter
        document.addEventListener('keydown', (event) => {
            if (event.key === 'Enter') {
                openAppInNewWindow();
            }
        });
    </script>

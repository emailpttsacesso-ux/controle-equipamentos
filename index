    <script>
        // URL do sistema
        const SYSTEM_URL = 'redirect.html'; // Usa a p√°gina de redirecionamento
        const DIRECT_URL = 'https://script.google.com/macros/s/SEU_ID/exec'; // URL direta
        
        // Abrir via redirecionamento
        function openSystem() {
            window.open(SYSTEM_URL, '_blank');
        }
        
        // Abrir direto (para teste)
        function openDirect() {
            const newWindow = window.open(DIRECT_URL, '_blank', 
                'width=500,height=800,scrollbars=yes,resizable=yes');
            
            if (!newWindow || newWindow.closed) {
                alert('Popup bloqueado! Por favor, permita pop-ups para este site.');
            }
        }
        
        // Detectar dispositivo m√≥vel
        function isMobile() {
            return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
        }
        
        // Se for mobile, tenta abrir automaticamente ap√≥s 2 segundos
        if (isMobile()) {
            setTimeout(() => {
                openSystem();
            }, 2000);
        }
        
        // Adicionar bot√£o de ajuda

<body>
    <div class="spinner"></div>
    <h2>Redirecionando para o sistema...</h2>
    <p>Aguarde enquanto carregamos o aplicativo.</p>
    
    <div id="manual-link" style="display: none; margin-top: 30px;">
        <p>Se o redirecionamento não funcionar, clique abaixo:</p>
        <a id="direct-link" class="btn">Abrir Sistema</a>
    </div>

    <script>
        // URL do seu Google Apps Script
        const APP_URL = 'https://script.google.com/macros/s/SEU_ID/exec';
        
        // Tentar abrir em nova aba/iframe
        function openApp() {
            // Método 1: Tentar iframe interno
            try {
                const iframe = document.createElement('iframe');
                iframe.style.cssText = `
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    border: none;
                    background: white;
                    z-index: 9999;
                `;
                iframe.src = APP_URL;
                document.body.appendChild(iframe);
                
                // Mostrar link manual
                setTimeout(() => {
                    document.getElementById('manual-link').style.display = 'block';
                    document.getElementById('direct-link').href = APP_URL;
                }, 3000);
                
            } catch (e) {
                // Se falhar, redirecionar diretamente
                window.location.href = APP_URL;
            }
        }
        
        // Tentar abrir em popup
        function openPopup() {
            const popup = window.open(APP_URL, 'SistemaControle', 
                'width=500,height=800,scrollbars=yes,resizable=yes');
            
            if (!popup || popup.closed || typeof popup.closed == 'undefined') {
                // Popup bloqueado, mostrar link manual
                document.getElementById('manual-link').style.display = 'block';
                document.getElementById('direct-link').href = APP_URL;
                document.getElementById('direct-link').onclick = () => window.open(APP_URL, '_blank');
            }
        }
        
        // Iniciar
        setTimeout(() => {
            // Primeiro tenta popup
            openPopup();
            
            // Se depois de 2 segundos ainda não redirecionou, tenta iframe
            setTimeout(openApp, 2000);
        }, 1000);
    </script>
</body>
</html>
